
<div class="columns">
    <div class="column">
    </div>
    <div class="column is-5">        
        <!-- PROFILE CARD -->
        <div class="card mb-4">
            <div class="card-content">
                <figure class="image is-128x128">
                   <%= gravatar_image_tag(@user.email, size: 128, alt: @user.name)%>
                </figure>
                <div class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <p class="title"><%= @user.name %></p>
                        </div>
                    </div>
                    <div class="level-right">
                        <!-- FOLLOW BUTTON -->
                        <div class="level-item">
                            
                                <%= render "follow_form"  %>
                         
                                <a href="/users/edit"><button class="button is-info ml-1"><strong>Edit Profile</strong></button></a>
                 
                        </div>
                    </div>
                </div>
                <p class="mt-2"><%= @user.username%></p>
                <p class="mt-2">
                <span class="icon ml-2"><i class="fas fa-calendar-alt"></i></span>Joined 
                </p>
                <p class="mt-2"><strong><%= @user.following.count %></strong> Following   <strong><%= @user.followers.count %></strong> Followers</p>
            </div>
        </div>
        

        
        
       
       
    </div>
    
     
    <% if @user.email == current_user.email  %>
    <%= render "tweets/feed2"%>
    <%else%>   
    <%= render "tweets/feed"%>
    <% end %>
    
    
    <div class="column">
    </div>
</div>
